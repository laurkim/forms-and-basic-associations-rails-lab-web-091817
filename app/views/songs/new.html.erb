<h1>Create a Song</h1>

<%= form_for @song do |f| %>
  <%= f.label "Title: " %>
  <%= f.text_field :title %><br>

  <%= f.label "Artist: " %>
  <%= f.text_field :artist_name %><br>

  <%= f.label "Genre: " %>
  <%= f.collection_select :genre_id, @genres, :id, :name %>
    <datalist id="genres_autocomplete">
      <% @genres.each do |genre| %>
      <option value="<%= genre.name %>">
      <% end %>
    </datalist>
  <br>

  <%= f.label "Notes: " %>
    <input name="song[note_contents][]", id="song_notes_1">
    <input name="song[note_contents][]", id="song_notes_2">
    <input name="song[note_contents][]", id="song_notes_3">
  <br>

  <%= f.submit %>
<% end %>
